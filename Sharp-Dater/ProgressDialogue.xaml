<Window x:Class="Sharp_Dater.ProgressDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sharp_Dater"
        mc:Ignorable="d"
        Title="Downloading Update..." Height="128" Width="256">
    <Grid>
        <StackPanel>
            <Label Margin="8" Name="Message">Downloading...</Label>
            <ProgressBar Margin="8" Height="16" Name="Bar"></ProgressBar>
            <Button Margin="8" Width="64" HorizontalAlignment="Right">Ok</Button>
        </StackPanel>

    </Grid>
</Window>
